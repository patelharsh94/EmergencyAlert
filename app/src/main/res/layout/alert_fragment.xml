<?xml version="1.0" encoding="utf-8"?>
<!--
    Author: Harsh Patel
    This will be the main alert screen.
 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_fragment_id">


    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/alert_timer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:bar_width="12dp"
        app:bar_color="#b5b6b9"
        app:progress="0"
        app:progress_color="#d3f115"
        app:progress_width="10dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:longClickable="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppBaseTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hold on for 1 sec!"
        android:id="@+id/alert_inst"
        android:layout_above="@+id/alert_timer"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textSize="40dp"/>


</RelativeLayout>